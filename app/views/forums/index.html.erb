<p id="notice"><%= notice %></p>

<h1>Forums</h1>
<div class="panel panel-default">
<table class="table">
  <tr>
    <th width="70%">Forum</th>
    <th width="30%">Last Post</th>
  </tr>
  <% for forum in @forums %>
    <tr>
      <td><h4><%= link_to h(forum.name), forum_path(forum.id) %></h4>
        <small><%= forum.topics.count %> topics</small><br />
        <%=h forum.description %></td>
        <td class="right">
          <% if forum.most_recent_post %>
            <%= time_ago_in_words(forum.most_recent_post.created_at)%> ago by
            <%= link_to forum.most_recent_post.user.username, "/users/#{forum.most_recent_post.last_poster_id}" %>
            </body>
            <% else %>
            no posts
            <% end %>
          </td>

      <td><%= link_to "Show", forum, class: "btn btn-default" %></td>
      <td><%= link_to "Edit", edit_forum_path(forum), class: "btn btn-default" %></td>
      <td><%= link_to "Delete", forum, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>
</div>

<br>

